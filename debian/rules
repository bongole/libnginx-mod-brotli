#!/usr/bin/make -f

package = libnginx-mod-brotli

%:
	dh $@

clean:
	dh_testdir
	dh_testroot
	dh_clean
	rm -rf $(CURDIR)/objs

override_dh_auto_configure:
	./configure --add-dynamic-module=../ngx_brotli --with-compat

override_dh_auto_build:
	make modules

override_dh_auto_install:
	mkdir -p usr/share/nginx/modules
	cp objs/ngx_http_brotli_static_module.so usr/share/nginx/modules
	cp objs/ngx_http_brotli_filter_module.so usr/share/nginx/modules

